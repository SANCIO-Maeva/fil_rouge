generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id_user       Int         @id @default(autoincrement())
  name          String
  firstname     String
  mail          String      @unique
  password      String
  role          String   
  latitude      Float?      // Localisation approximative
  longitude     Float?
  city          String?     // Ville
  country       String?     // Pays
  skills        UserSkills[]
  announcements Announcements[]
  messagesSent  Messages[] @relation("SentMessages")
  messagesReceived Messages[] @relation("ReceivedMessages")
}

model Skills {
  id_skill    Int          @id @default(autoincrement())
  name        String       @unique
  description String
  users       UserSkills[]
}

model UserSkills {
  userId  Int
  skillId Int
  user    Users @relation(fields: [userId], references: [id_user])
  skill   Skills @relation(fields: [skillId], references: [id_skill])
  
  @@id([userId, skillId]) // Cl√© primaire composite
}

model Announcements {
  id_announcement Int        @id @default(autoincrement())
  title          String
  description    String     @db.Text
  userId         Int       
  user           Users      @relation(fields: [userId], references: [id_user])
  messages       Messages[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Messages {
  id_message       Int        @id @default(autoincrement())
  content          String
  timestamp        DateTime
  id_user_sender   Int
  id_user_receiver Int
  announcementId   Int       
  announcements    Announcements @relation(fields: [announcementId], references: [id_announcement])
  sender          Users @relation("SentMessages", fields: [id_user_sender], references: [id_user])
  receiver        Users @relation("ReceivedMessages", fields: [id_user_receiver], references: [id_user])
}
